<nav class="navbar">
  <div class="navbar-container">
    <div class="navbar-brand">
      <%= link_to "Parts Tracker", root_path, class: "navbar-logo" %>
    </div>
    
    <div class="navbar-menu">
      <% if authenticated? %>
        <%= link_to "Tools", tools_path, class: "navbar-link" %>
        <%= link_to "Cars", cars_path, class: "navbar-link" %>
      <% end %>
    </div>
    
    <div class="navbar-actions">
      <% if authenticated? %>
        <span class="navbar-user">
          <%= Current.user.email_address %>
        </span>
        <%= button_to "Sign out", session_path, method: :delete, class: "btn-signout", form: { data: { turbo_confirm: "Are you sure you want to sign out?" } } %>
      <% end %>
    </div>
  </div>
</nav>
